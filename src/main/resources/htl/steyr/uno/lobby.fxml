<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<BorderPane stylesheets="@style/lobbyStyle.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">

   <center>
      <StackPane styleClass="background" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" maxWidth="800.0" spacing="10.0" styleClass="centerContent">
               <children>
                  <Label styleClass="welcomeLable" text="Wilkommen bei UNO!" />
                  <Label styleClass="subtitle" text="Erstelle eine Party oder tritt einer bei" />
                  <HBox alignment="CENTER" spacing="40.0">
                     <children>
                        <StackPane prefHeight="260.0" prefWidth="300.0" styleClass="joinAndCreate">
                           <children>
                              <VBox alignment="CENTER" spacing="12.0">
                                 <children>
                                    <Label styleClass="partyLable" text="Party erstellen" />
                                    <Label maxWidth="240.0" styleClass="subtitle" text="Erstelle eine neue Party und lade deine Freunde mit dem code ein" wrapText="true" />
                                    <Button fx:id="createPartyButton" mnemonicParsing="false" onAction="#onCreatePartyButtonClicked" styleClass="createPartyButton" text="Party erstellen" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
                        <VBox alignment="CENTER" spacing="8.0">
                           <children>
                              <Line endX="80.0" startX="0.0" styleClass="lines" />
                              <Label styleClass="subtitle" text="oder" />
                              <Line endX="80.0" startX="0.0" styleClass="lines" />
                           </children>
                        </VBox>
                        <StackPane prefHeight="260.0" prefWidth="300.0" styleClass="joinAndCreate">
                           <children>
                              <VBox alignment="CENTER" spacing="12.0">
                                 <children>
                                    <Label styleClass="partyLable" text="Party beitreten" />
                                    <Label styleClass="subtitle" text="Gib den 6 stelligen Party Code ein" />
                                    <TextField fx:id="partyCodeField" alignment="CENTER" promptText="000000" styleClass="partyCodeLable" />
                                    <Button fx:id="joinPartyButton" mnemonicParsing="false" onAction="#onJoinButtonClicked" styleClass="joinLobbyButton" text="Beitreten" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>

   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="600.0" spacing="8.0" styleClass="topANDbottom" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="UnoTitleTop" text="Uno" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogoutButtonClicked" styleClass="logoutButton" text="Logout" />
         </children>
      </HBox>
   </top>

   <bottom>
      <HBox prefHeight="45.0" prefWidth="600.0" spacing="0.0" styleClass="topANDbottom" BorderPane.alignment="CENTER">

         <StackPane prefHeight="45.0" styleClass="stats" HBox.hgrow="ALWAYS">
            <children>
               <Label fx:id="gamesPlayedLabel" styleClass="stats" text="Spiele:" />
            </children>
         </StackPane>

         <StackPane prefHeight="45.0" styleClass="stats" HBox.hgrow="ALWAYS">
            <children>
               <Label fx:id="gamesWonLabel" styleClass="stats" text="Siege:" />
            </children>
         </StackPane>

         <StackPane prefHeight="45.0" styleClass="stats" HBox.hgrow="ALWAYS">
            <children>
               <Label fx:id="winRateLabel" styleClass="stats" text="Siegrate:" />
            </children>
         </StackPane>

      </HBox>
   </bottom>
</BorderPane>